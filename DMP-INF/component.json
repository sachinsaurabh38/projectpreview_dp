{
	"kind": "component",
	"type": "FAWB DMP Component",
	"name": "${project.build.finalName}",
	"description": "DMP Component description placeholder",
	"version": "${project.version}",
	"artifactId": "${project.artifactId}",
	"groupId": "${project.groupId}",
	"category": "DMP Component",
	"tenantId": "${tenant}",
	"appdService":"DMS-FAWB-${project.build.finalName}",
	"appdProductService":"Core",
	"appdSegmentProduct":"Platform-DMS",
	"keywords": [
		"DMP",
		"Application Workbench",
		"Component"
	],
	"dependencies": [
		{
			"kind": "engine",
			"type": "docker",
			"name": "Tomcat container",
			"env" : [ "design" ],
			"dockerfile": "${dockerImageName}:${image.tag}",
			"size": "medium",
			"scale": false,
			"disableAutoScaling": true,
			"resourceReq": {
				"cpuRequest": "100m",
				"cpuLimit": "1000m",
				"memoryRequest": "400Mi",
				"memoryLimit": "1000Mi"
			},
			"autoscaleDesc": {
				"targetCPU": 70,
				"maxReplicas": 2,
				"minReplicas": 1
			},
			"volumes": [
				{
					"id": "pvc-fawb-dmp-inf",
					"storageClass": "shared",
					"path": "/app-root/runtime/data/design",
					"accessMode": "ReadWriteMany",
					"size": "10Gi"
				}
			]
		},
		 {
			"kind" : "engine",
			"type" : "docker",
			"name" : "Tomcat container",
			"env" : [ "staging" ],
			"dockerfile" : "${dockerImageName}:${image.tag}",
			"size" : "medium",
			"scale" : false,
			"disableAutoScaling" : false,
			"resourceReq" : {
				"cpuRequest" : "100m",
				"cpuLimit" : "1000m",
				"memoryRequest" : "400Mi",
				"memoryLimit" : "1000Mi"
			},
			"autoscaleDesc" : {
				"targetCPU" : 70,
				"maxReplicas" : 2,
				"minReplicas" : 1
			},
			 "volumes": [
				 {
					 "id": "pvc-fawb-dmp-inf",
					 "storageClass": "shared",
					 "path": "/app-root/runtime/data/design",
					 "accessMode": "ReadWriteMany",
					 "size": "10Gi"
				 }
			 ]
		 }, {
			"kind" : "engine",
			"type" : "docker",
			"name" : "Tomcat container",
			"env" : [ "production" ],
			"dockerfile" : "${dockerImageName}:${image.tag}",
			"size" : "medium",
			"scale" : false,
			"disableAutoScaling" : false,
			"resourceReq" : {
				"cpuRequest" : "100m",
				"cpuLimit" : "1000m",
				"memoryRequest" : "400Mi",
				"memoryLimit" : "1000Mi"
			},
			"autoscaleDesc" : {
				"targetCPU" : 70,
				"maxReplicas" : 10,
				"minReplicas" : 1
			},
			"volumes": [
				{
					"id": "pvc-fawb-dmp-inf",
					"storageClass": "shared",
					"path": "/app-root/runtime/data/design",
					"accessMode": "ReadWriteMany",
					"size": "10Gi"
				}
			]
		}
	],
	"license": "public/license.txt",
	"documentation": "public/readme.html",
	"authors": [
		{
			"name": "${project.owner.name}",
			"email": "${project.owner.email}"
		},
		{
			"name": "${deployment.owner.email}",
			"email": "${deployment.owner.email}"
		}
	],
	"icons": [
		{
			"size": "64x64",
			"url": "public/image/icon64x64.png"
		}
	],
	"screenshots": [
		{
			"url": "image/screenshot.png",
			"description": "Screenshot Information"
		}
	]
}
